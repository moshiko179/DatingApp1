<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aaa.DetailedProfileActivity">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/pic2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Mike's place tonight!"
        android:id="@+id/detailed_current_status"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="23sp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="168 cm , 65 kg"
        android:id="@+id/detailed_height_wheight"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/detailed_current_status" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="thin , spain"
        android:id="@+id/detailed_body_nation"
        android:layout_below="@+id/detailed_height_wheight"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="16sp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="single , serious"
        android:id="@+id/detailed_relatioStatus_seeking"
        android:layout_below="@+id/detailed_body_nation"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="16sp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:text="my name is alexandra, i live in tel aviv with my awesome dog. i like to spend time in nature. i hangout with my friends usually on the weekends ;)"
        android:id="@+id/detailed_about"
        android:layout_alignParentStart="false"
        android:textSize="20sp"
        android:layout_below="@+id/imageView" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/detailed_eye"
        android:background="@drawable/eye"
        android:layout_marginLeft="20dp"

        android:layout_below="@+id/detailed_about"
        android:layout_marginBottom="-10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/detailed_smile"
        android:layout_marginLeft="20dp"
        android:background="@drawable/smile"
        android:layout_toEndOf="@+id/detailed_eye"
        android:layout_below="@+id/detailed_about"
        android:layout_marginBottom="-10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/detailed_like"
        android:layout_marginLeft="20dp"
        android:background="@drawable/like"
        android:layout_toEndOf="@+id/detailed_smile"
        android:layout_below="@+id/detailed_about"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="-10dp" />

    <ImageButton
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/detailed_heart"
        android:layout_marginLeft="20dp"
        android:background="@drawable/heart"
        android:layout_toEndOf="@+id/detailed_like"
        android:layout_below="@+id/detailed_about"

        android:layout_alignParentEnd="false"
        android:layout_marginBottom="-10dp" />


</RelativeLayout>
